#include <iostream>
using namespace std;

class Number {
    int value;
public:
    Number(int v) : value(v) {}

    Number operator-() const {
        return Number(-value);
    }

    void display() const {
        cout << "Value: " << value << endl;
    }
};

int main() {
    Number n1(10);
    Number n2 = -n1;

    n1.display();
    n2.display();

    return 0;
}
