#include <iostream>
using namespace std;

class Counter {
    int value;
public:
    Counter(int v = 0) : value(v) {}

    // Pre-increment
    Counter& operator++() {
        ++value;
        return *this;
    }

    // Post-increment
    Counter operator++(int) {
        Counter temp = *this;
        value++;
        return temp;
    }

    void display() const {
        cout << "Value: " << value << endl;
    }
};

int main() {
    Counter c1(10);

    ++c1;
    c1.display();

    c1++;
    c1.display();

    return 0;
}
