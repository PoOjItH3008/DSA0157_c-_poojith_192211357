#include <iostream>
#include <string>
using namespace std;

class Student {
    string name;
    int age;
public:
    Student() : name(""), age(0) {}

    friend istream& operator>>(istream& in, Student& s) {
        cout << "Enter name: ";
        in >> ws; 
        getline(in, s.name);
        cout << "Enter age: ";
        in >> s.age;
        return in;
    }

    friend ostream& operator<<(ostream& out, const Student& s) {
        out << "Name: " << s.name << ", Age: " << s.age;
        return out;
    }
};

int main() {
    Student s;
    cout << "Enter student details:" << endl;
    cin >> s;
    cout << "You entered: " << s << endl;

    return 0;
}
