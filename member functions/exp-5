#include <iostream>
using namespace std;

class Person {
protected:
    string name;
    int age;
    string gender;
public:
    Person(string n, int a, string g) : name(n), age(a), gender(g) {}
    virtual void display() = 0;
};

class Student : public Person {
    int rollNumber;
    string studentClass;
public:
    Student(string n, int a, string g, int rn, string sc) : Person(n, a, g), rollNumber(rn), studentClass(sc) {}
    void display() override {
        cout << "Student Name: " << name << ", Age: " << age << ", Gender: " << gender << ", Roll Number: " << rollNumber << ", Class: " << studentClass << endl;
    }
};

class Teacher : public Person {
    string subject;
    double salary;
public:
    Teacher(string n, int a, string g, string sub, double sal) : Person(n, a, g), subject(sub), salary(sal) {}
    void display() override {
        cout << "Teacher Name: " << name << ", Age: " << age << ", Gender: " << gender << ", Subject: " << subject << ", Salary: " << salary << endl;
    }
};

int main() {
    Student stu("Charlie", 20, "Male", 12345, "10th Grade");
    stu.display();

    Teacher tch("Dana", 35, "Female", "Mathematics", 50000);
    tch.display();

    return 0;
}
